<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp"
    android:fillViewport="true"
    tools:context=".screens.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simulation Configuration"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/colorOnPrimary"
            android:layout_gravity="center"
            android:paddingBottom="10dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/colorPrimaryVariant">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingVertical="10dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_rpm"
                android:tint="@color/surface"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current RPM:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorOnBackground"/>

            <TextView
                android:id="@+id/text_current_rpm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 RPM"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/surface"
                android:layout_marginStart="12dp"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
        <!-- Current RPM -->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/colorPrimaryVariant">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingVertical="10dp">
            <!-- Simulated Car Selection -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_car"
                    android:tint="@color/surface"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Simulated Car:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorOnBackground"/>
            </LinearLayout>

            <!-- Car Selection Dropdown with Arrow Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Spinner
                    android:id="@+id/spinner_car_selection"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:popupBackground="@color/colorPrimaryVariant"
                    android:background="@null"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/colorPrimaryVariant">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingVertical="10dp">

                <!-- Volume Intensity -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_volume"
                        android:tint="@color/surface"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Volume Intensity:"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorOnBackground"/>
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekbar_volume_intensity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="50"
                    android:thumbTint="@color/surface"
                    android:progressTint="@color/surface"
                    android:paddingBottom="12dp"/>

                <!-- Display Volume Percentage -->
                <TextView
                    android:id="@+id/text_volume_intensity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50%"
                    android:textSize="16sp"
                    android:textColor="@color/colorOnBackground"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
